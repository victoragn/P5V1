{% extends "@AgnezCore/layout.html.twig" %}

{% block body %}

{% if app.user.initialized==4 %}
    <button><a href="{{ path('agnez_core_homepage') }}">Retour à l'accueil</a></button>
{% endif %}
<button><a href="{{ path('agnez_core_initClasses') }}">Etape précedente (Noms des classes) </a></button>
  Choisissez une classe pour y entrer les élèves :

    <ul class="ulChoixClasses">
        {% if classes|length==0 %}
            Veuillez aller ajouter des classes pour pouvoir y ajouter des élèves
            <button><a href="{{ path('agnez_core_initClasses') }}">Définir les classes</a></button>
        {%endif%}

        {% for classe in classes %}

        <li class="liChoixClasses">
            <p>{{classe.name}} : {{classe.eleves|length}} élèves enregistrés</p>
            <button class="gererClasse"><a href="{{ path('agnez_core_classeDetail', {'id': classe.name}) }}">Voir la classe</a></button>
        </li>

        {% endfor %}
    </ul>

<button>
    {% if app.user.initialized==1 %}
    <a href="{{ path('agnez_core_validClasses') }}">
    {% else %}
    <a href="{{ path('agnez_core_edt') }}">
    {% endif %}
        Etape suivante (Emploi du temps)</a>
</button>

{% endblock %}
